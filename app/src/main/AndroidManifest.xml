<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.danielspeixoto.bilheteria">

    <application
        android:name=".helper.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable"/>
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".view.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.danielspeixoto.bilheteria.view.activity.MainActivity"/>
        </activity>
        <activity
            android:name=".view.activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".view.activity.OffersActivity"
            android:label="@string/title_activity_items"
            android:parentActivityName=".view.activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.danielspeixoto.bilheteria.view.activity.HomeActivity"/>
        </activity>
        <activity
            android:name=".view.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".view.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.danielspeixoto.bilheteria.view.activity.MainActivity"/>
        </activity>
        <activity
            android:name=".view.activity.PaymentsActivity"
            android:label="@string/title_activity_payments"
            android:parentActivityName=".view.activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.danielspeixoto.bilheteria.view.activity.HomeActivity"/>
        </activity>
        <activity
            android:name=".view.activity.TicketDataActivity"
            android:label="@string/title_activity_ticket_data"
            android:parentActivityName=".view.activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.danielspeixoto.bilheteria.view.activity.HomeActivity"/>
        </activity>
        <activity
            android:name=".view.activity.HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName=".view.activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.danielspeixoto.bilheteria.view.activity.HomeActivity"/>
        </activity>
        <activity
            android:name=".view.activity.SearchResultsActivity"
            android:label="@string/app_name"
            android:parentActivityName=".view.activity.HistoryActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <!--android:launchMode="singleTop">-->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.danielspeixoto.bilheteria.view.activity.HistoryActivity"/>
        </activity>
    </application>

</manifest>